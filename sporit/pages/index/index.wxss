.navbar {
    display: flex;
    position: fixed;
    z-index: 500;
    top: 0;
    width: 100%;
    overflow: hidden;
    background: #fff;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 10rpx 0;
    text-align: center;
    font-size: 32rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #999;
}

.navbar__item_on {
    color: #000;
    font-size: 36rpx; 
}

 .navbar__slider {
    position: absolute;
    display: block;
    left: 0;
    bottom: 0;
    height: 3px;
    transition: transform .3s;
} 

.navbar__title{
    display: inline-block;
    max-width: 8em;
    text-align: center;
}

