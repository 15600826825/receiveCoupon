view , page {
  padding: 0px;
  margin: 0px;
}

.page {
  width: 100%;
  height: 100%;
}

.navbar {
    display: flex;
    position: fixed;
    z-index: 500;
    top: 0;
    width: 100%;
    overflow: hidden;
    background: #fff;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 10rpx 0;
    text-align: center;
    font-size: 32rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #999;
}

.navbar__item_on {
    color: #000;
    font-size: 36rpx; 
}

 .navbar__slider {
    position: absolute;
    display: block;
    left: 0;
    bottom: 0;
    height: 3px;
    transition: transform .3s;
} 

.navbar__title{
    display: inline-block;
    max-width: 8em;
    text-align: center;
}

swiper {
  height: 100%;
}

swiper-item{
  width: 100%;
  padding-top: 20rpx;
}

.scroll-view_H{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.scroll-view-item_H{
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  border-radius: 8rpx;
  display: inline-block;
  margin-left: 24rpx;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  box-shadow: 1px 2px 3px rgba(201,203,204,0.5);
}


.learn-course{
  width: 100%;
  overflow: hidden;
  padding-bottom: 30rpx;
}
/* 精品课样式 */
.learn-left-warp{
  margin:0 30rpx 30rpx;
