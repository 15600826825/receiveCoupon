view{
  padding: 0px;
  margin: 0px;
}

.coursedetail-video{
  width: 100%;
  height: 400rpx;
}

.coursedetail-video-play{
  width: 100%;
  height: 400rpx;
  padding: 0;
}

.coursedetail-top{
  height: 134rpx;
  margin: 30rpx 30rpx 0;
  overflow: hidden;
  display: flex;
}

.coursedetail-top-center{
  width: 230rpx;
  flex: 3;
  height: 134rpx;
  text-align: center;
}

.coursedetail-top-center-title{
  font-size: 22rpx;
}

.coursedetail-top-center-info{
  font-size: 26rpx;
  margin-top: 30rpx;
}

.coursedetail-top-center-price{
  color: #F54039;
}

.coursedetail-brief{
  margin: 30rpx;
  padding: 30rpx;
  overflow: hidden;
  background: #fff;
  border-radius:8px;
  box-shadow:2px 8px 14px rgba(224,221,221,0.7);
}

.coursedetail-brief-title{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 34rpx;
}

.coursedetail-brief-info{
  font-size: 22rpx;
  color: #666;
  line-height: 34rpx;
  display: block;
}

.coursedetail-outline{
  margin: 30rpx;
  padding-top: 30rpx;
  overflow: hidden;
  background: #fff;
  border-radius:8px;
  box-shadow:2px 8px 14px rgba(224,221,221,0.7);
}

.coursedetail-outline-title{
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
}

.coursedetail-outline-chapter{
  font-size: 30rpx;
  color: #333;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.coursedetail-outline-info{
  font-size: 22rpx;
  color: #333;
  /* padding: 5rpx 30rpx; */
  line-height: 30rpx;
  /* margin: 5rpx 60rpx; */
}

.coursedetail-outline-section{
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
  width: 630rpx;
  overflow: hidden;
  padding: 0 30rpx;
  line-height: 30rpx;
}

.coursedetail-outline-section-dot{
  width: 8rpx;
  height: 8rpx;
  overflow: hidden;
  border-radius: 50%;
  background: #666;
  float: left;
  margin-right: 12rpx;
  margin-top: 10rpx;
}

.coursedetail-outline-section-text{
  float: right;
  width: 610rpx;
  line-height: 34rpx;
  display: block;
  font-size: 22rpx;
}

.coursedetail-outline-bottom{
  width: 630rpx;
  padding: 0 30rpx;
  height: 84rpx;
  color: #EF4636;
  font-size: 26rpx;
  line-height: 84rpx;
  text-align: right;
  border-top: 1px solid #f6f6f6;
  margin-top: 30rpx;
}

.coursedetail-outline-buttom-image{
  width: 40rpx;
  height: 30rpx;
  float: right;
  margin-top: 28rpx;
  margin-right: 10rpx;
}

.coursedetail-outline-buttom-text{
  float: right;
}

.coursedetail-lecturer{
  margin: 30rpx;
  padding: 30rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 8px;
  box-shadow:2px 8px 14px rgba(224,221,221,0.7);
  margin-bottom: 118rpx;
}

.coursedetail-lecturer-title{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.coursedetail-lecturer-center{
  width: 630rpx;
  display: flex;
  overflow: hidden;
  margin-top: 20rpx;
}

.coursedetail-lecturer-center-img{
  width: 200rpx;
  height: 120rpx;
  background: red;
  margin-right: 30rpx;
}

.coursedetail-lecturer-center-image{
  width: 100%;
  height: 100%;
}

.coursedetail-lecturer-center-info{
  width: 320rpx;
  overflow: hidden;
  flex: 1;
  display: block;
}

.coursedetail-lecturer-center-name{
  font-size: 26rpx;
  color: #666;
  line-height: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coursedetail-lecturer-center-post{
  font-size: 24rpx;
  color: #666;
  line-height: 34rpx;
  margin-bottom: 10rpx;
}

.coursedetail-lecturer-info{
  font-size: 22rpx;
  line-height: 34rpx;
  color: #666;
  display: block;
  margin-top: 20rpx;
}

.receive-coupon-button{
  position: fixed;
  font-size: 30rpx;
  left: 0;
  bottom: 0;
  width: 100%;
  float: left;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border: 0;
  color: #fff;
  outline:none;
  list-style: none;
  border-radius: 0;
  background: #F54039;
}

.receive-coupon-button::after{
  border: 0;
  color: #fff;
  padding: 0;
  margin: 0;
  border-radius: 0;
} 

.receive-coupon-button:focus{
  outline: 0;
  border: 0;
  color: #fff;
  padding: 0;
  margin: 0;
}

