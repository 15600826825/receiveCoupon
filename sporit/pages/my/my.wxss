/* pages/my/my.wxss */
.userBox{
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    height: 166rpx;
    background: #fff;
    margin-top: 80rpx;
    margin-bottom: 60rpx;
}

.userHeader{
    width: 166rpx;
    height: 166rpx;
    border: 1rpx solid #f6f6f6;
    background: #fff;
    overflow: hidden;
    border-radius: 50%;
    padding: 0;
}

.userHeader-img{
  width: 166rpx;
  height: 166rpx;
  border-radius: 50%;
}

.userHeader::after{
  color: #fff;
  margin: 0;
  border-radius: 50%;
  padding: 0;
} 

.userHeader:focus{
  outline: 0;
  border: 0;
  color: #fff;
  padding: 0;
  margin: 0;
}


.userHeader image{
    width: 100%;
    height: 100%;
    float: left;
}

.userNick{
    width: 524rpx;
    text-align: right;
    font-size: 40rpx;
    color: #333;
}


.my_item_box{
    box-sizing: border-box;    
    background: #fff;
    padding: 0 30rpx;
}

.my_item{
    box-sizing: border-box;
    height: 110rpx;
    border-bottom: 1rpx solid #f2f1f1;
    font-size: 34rpx;
}

.my_item_box .my_item:last-child{
    border-bottom: none;
}

.icon{
	width: 40rpx;
  height: 40rpx;
  margin-top: 35rpx;
  float: left;
}

.my_item_text{
	flex: 1;
  font-size: 30rpx;
	color: #464646;
  margin-left: 30rpx;
  line-height: 110rpx;
}

.my-button{
  width: 600rpx;
  float: left;
  height: 110rpx;
  text-align: left;
  padding: 0;
  margin: 0;
  border: 0;
  background: #fff;
  outline:none;
  list-style: none;
}

.my-button::after{
  border: 0;
  color: #464646;
  padding: 0;
  margin: 0;
} 

.my-button:focus{
  outline: 0;
  border: 0;
  color: #464646;
  padding: 0;
  margin: 0;
}

.icon-right{
	width: 30rpx;
  height: 30rpx;
  float: right;
  margin-top: 40rpx;
}